<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="false">

    <!-- mapa -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- boton filtros -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnFiltros"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@color/dark_grey"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Filtrar mapa"
            android:padding="10dp"
            android:src="@drawable/ic_filter"
            app:tint="@color/white" />
    </androidx.cardview.widget.CardView>

    <!-- buscador -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSearch"

        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"

        app:cardBackgroundColor="@color/dark_grey"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"

        app:layout_constraintEnd_toStartOf="@+id/btnFiltros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"

                android:hint="Buscar aquí"
                android:textColor="@android:color/white"
                android:textColorHint="#B3FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- boton capas -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnMapLayers"

        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"

        app:cardBackgroundColor="@color/dark_grey"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"

        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Cambiar capas"
            android:padding="8dp"
            android:src="@drawable/ic_layers"
            app:tint="@android:color/white" />
    </androidx.cardview.widget.CardView>

    <!-- fondo negro para ventanas emergentes -->
    <View
        android:id="@+id/darkBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:elevation="20dp"
        android:visibility="gone" />

    <!-- ventana filtros -->
    <androidx.cardview.widget.CardView
        android:id="@+id/filterWindow"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:visibility="gone"

        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="20dp"
        app:cardElevation="21dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/btnCloseFilter"
                        android:text="Filtrar Marcadores"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnCloseFilter"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"

                        android:backgroundTint="@color/dark_grey"

                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"

                        android:padding="0dp"

                        android:text="X"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        app:cornerRadius="20dp" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/dark_grey"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"

                            android:text="Fecha"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinDia"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white" />

                            <Spinner
                                android:id="@+id/spinMes"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white" />

                            <Spinner
                                android:id="@+id/spinAno"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1.2"
                                android:backgroundTint="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/dark_grey"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Provincia"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/containerProvincias"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cbAlava"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"

                                android:buttonTint="@color/white"

                                android:checked="true"

                                android:text="Álava"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                            <CheckBox
                                android:id="@+id/cbVizcaya"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"

                                android:buttonTint="@color/white"

                                android:checked="true"

                                android:text="Vizcaya"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                            <CheckBox
                                android:id="@+id/cbGuipuzcoa"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:buttonTint="@color/white"

                                android:checked="true"

                                android:text="Guipúzcoa"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/dark_grey"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Marcadores"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/cbAlerta"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:buttonTint="#FF4444"

                            android:checked="true"

                            android:text="Accidentes"
                            android:textColor="@color/white" />

                        <CheckBox
                            android:id="@+id/cbObra"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:buttonTint="#FFBB33"

                            android:checked="true"

                            android:text="Obras"
                            android:textColor="@color/white" />

                        <CheckBox
                            android:id="@+id/cbCamara"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:buttonTint="#42bfdb"

                            android:checked="true"

                            android:text="Cámaras"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    app:cardBackgroundColor="@color/dark_grey"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"

                            android:text="Gravedad"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cbGrave"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:buttonTint="@color/white"

                                android:checked="true"

                                android:text="Grave"
                                android:textColor="@color/white" />

                            <CheckBox
                                android:id="@+id/cbMedio"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:buttonTint="@color/white"

                                android:checked="true"

                                android:text="Medio"
                                android:textColor="@color/white" />

                            <CheckBox
                                android:id="@+id/cbLeve"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:buttonTint="@color/white"

                                android:checked="true"

                                android:text="Leve"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnAplicarFiltros"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/cake_green"
                    android:text="Aplicar Filtros"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- ventana detalles marcador-->
    <androidx.cardview.widget.CardView
        android:id="@+id/markerWindow"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:visibility="gone"

        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="20dp"
        app:cardElevation="21dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"

            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <TextView
                    android:id="@+id/tvTituloDetalles"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/btnCerrarDetalles"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"

                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnCerrarDetalles"

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"

                    android:backgroundTint="@color/dark_grey"

                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"

                    android:padding="0dp"

                    android:text="X"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    app:cornerRadius="20dp" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"

                app:contentPadding="15dp"

                app:cardBackgroundColor="@color/dark_grey"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/tvInfoDetalles"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:lineSpacingExtra="4dp"

                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"

                app:cardBackgroundColor="@color/dark_grey"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/ivCamara"

                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:scaleType="centerCrop"

                    android:background="#EEEEEE"

                    android:visibility="gone"

                    android:contentDescription="Imagen de la cámara" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- navbar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"

        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="@color/dark_grey"

        android:elevation="16dp"

        android:fitsSystemWindows="false"
        app:itemIconTint="@color/nav_selector"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navbar" />

</androidx.constraintlayout.widget.ConstraintLayout>