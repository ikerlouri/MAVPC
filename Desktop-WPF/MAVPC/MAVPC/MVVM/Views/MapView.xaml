<UserControl x:Class="MAVPC.MVVM.Views.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid>
        <gmap:GMapControl x:Name="MainMap"
                          Zoom="10" MaxZoom="18" MinZoom="5"
                          Loaded="MainMap_Loaded"
                          MouseWheelZoomType="MousePositionAndCenter"
                          CanDragMap="True"/>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20">

            <Border Background="#DD333333" CornerRadius="20" Padding="10,5" Effect="{StaticResource MaterialDesignShadowDepth2}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Magnify" Foreground="White" VerticalAlignment="Center" Width="20" Height="20" Margin="5,0"/>

                    <TextBox x:Name="SearchBox" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Width="250" FontSize="14" Foreground="White"
                             materialDesign:HintAssist.Hint="Buscar (Cámaras, Obras...)"
                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                             BorderThickness="0" VerticalAlignment="Center" Margin="5,0" CaretBrush="White"/>
                </StackPanel>
            </Border>

            <Popup IsOpen="{Binding IsSearchPopupOpen}" StaysOpen="False" PlacementTarget="{Binding ElementName=SearchBox}" VerticalOffset="10" AllowsTransparency="True">
                <Border Background="#222" CornerRadius="8" BorderBrush="#444" BorderThickness="1" MaxHeight="300" Width="280">
                    <ListBox ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedResult}" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <materialDesign:PackIcon Kind="{Binding Icono}" Foreground="{Binding Color}" Width="20" Height="20" VerticalAlignment="Center"/>

                                    <StackPanel Margin="10,0,0,0">
                                        <TextBlock Text="{Binding Titulo}" Foreground="White" FontWeight="Bold" FontSize="12"/>
                                        <TextBlock Text="{Binding Subtitulo}" Foreground="Gray" FontSize="10"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Popup>
        </StackPanel>

        <Border HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="20" Background="#DD222222" CornerRadius="10" Padding="15"
                BorderBrush="#00D4FF" BorderThickness="0,0,0,2"
                Effect="{StaticResource MaterialDesignShadowDepth2}">
            <StackPanel>
                <TextBlock Text="CAPAS" Foreground="Gray" FontWeight="Bold" FontSize="10" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                <CheckBox IsChecked="{Binding ShowCameras}" Margin="0,5" Style="{StaticResource MaterialDesignAccentCheckBox}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Cctv" Foreground="#00D4FF" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Cámaras" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </CheckBox>
                <CheckBox IsChecked="{Binding ShowIncidents}" Margin="0,5" Style="{StaticResource MaterialDesignAccentCheckBox}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AlertCircle" Foreground="Red" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Alertas" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </CheckBox>
                <CheckBox IsChecked="{Binding ShowWorks}" Margin="0,5" Style="{StaticResource MaterialDesignAccentCheckBox}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Construction" Foreground="Orange" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Obras" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </CheckBox>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>