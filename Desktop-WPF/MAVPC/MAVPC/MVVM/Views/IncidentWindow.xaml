<Window x:Class="MAVPC.IncidentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="DETALLE INCIDENCIA" Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border x:Name="MainBorder" Background="#101010" CornerRadius="10" BorderBrush="#FF003C" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#1F1F1F" CornerRadius="10,10,0,0" Padding="20,15" MouseDown="Border_MouseDown">
                <DockPanel>
                    <Button DockPanel.Dock="Right" Click="BtnCerrar_Click" Style="{StaticResource MaterialDesignIconForegroundButton}" Foreground="Gray" ToolTip="Cerrar">
                        <materialDesign:PackIcon Kind="Close" Width="25" Height="25"/>
                    </Button>

                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon x:Name="IconoIncidencia" Kind="AlertCircle" Foreground="#FF003C" Width="28" Height="28" VerticalAlignment="Center" Margin="0,0,15,0"/>

                        <StackPanel>
                            <TextBlock x:Name="TxtTipo" Text="ACCIDENTE DE TRÁFICO" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="TxtCausa" Text="Colisión por alcance" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>
            </Border>

            <Grid Grid.Row="1" Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="CarEmergency" Width="100" Height="100" Foreground="#222" VerticalAlignment="Center" Margin="0,0,30,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">

                    <Border x:Name="BadgeNivel" HorizontalAlignment="Left" Background="#33FF0000" BorderBrush="Red" BorderThickness="1" CornerRadius="4" Padding="10,4" Margin="0,0,0,20">
                        <TextBlock x:Name="TxtNivel" Text="NIVEL ROJO" Foreground="Red" FontWeight="Bold" FontSize="12"/>
                    </Border>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="MUNICIPIO:" Foreground="Gray" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtMunicipio" Grid.Column="1" Text="Bilbao" Foreground="White"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="INICIO:" Foreground="Gray" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtFecha" Grid.Column="1" Text="12/05/2024 10:30" Foreground="White"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ESTADO:" Foreground="Gray" FontWeight="Bold"/>
                        <TextBlock Text="Activo en este momento" Grid.Column="1" Foreground="#00D4FF"/>
                    </Grid>
                </StackPanel>
            </Grid>

            <Border Grid.Row="2" Background="#151515" CornerRadius="0,0,10,10" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="UBICACIÓN EXACTA" Foreground="Gray" FontSize="10" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <materialDesign:PackIcon Kind="MapMarker" Foreground="#00D4FF" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtCarretera" Text="AP-8 (PK 14.5)" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtDireccion" Text=" -> Dirección Donostia" Foreground="Gray" FontSize="16" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Column="1" Style="{StaticResource MaterialDesignOutlinedButton}" Foreground="White" BorderBrush="Gray" Content="COPIAR COORDENADAS" Height="30" FontSize="10"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>