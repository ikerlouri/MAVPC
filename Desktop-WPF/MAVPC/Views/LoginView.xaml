<Window x:Class="MAVPC.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:MAVPC.ViewModels"
        mc:Ignorable="d"
        Title="Login MAVPC" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#121212"
        MouseDown="Window_MouseDown">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <Border Background="#F7C948" CornerRadius="0,0,150,0" Height="200" VerticalAlignment="Top"/>

        <materialDesign:Card Width="350" Padding="30" UniformCornerRadius="15"
                             materialDesign:ElevationAssist.Elevation="Dp8"
                             Background="#1E1E1E"
                             VerticalAlignment="Center" HorizontalAlignment="Center">

            <StackPanel>
                <TextBlock Text="INICIAR SESIÓN" Foreground="White" 
                           FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBox Text="{Binding Usuario, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Usuario"
                         materialDesign:HintAssist.Foreground="#F7C948"
                         Foreground="White"
                         Margin="0,0,0,15"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                <PasswordBox x:Name="txtPassword"
                             materialDesign:HintAssist.Hint="Contraseña"
                             materialDesign:HintAssist.Foreground="#F7C948"
                             Foreground="White"
                             Margin="0,0,0,20"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>

                <TextBlock Text="{Binding MensajeError}" Foreground="#FF5252" 
                           HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap"/>

                <Button Command="{Binding LoginCommand}"
                        Content="ENTRAR"
                        Height="45"
                        Background="#F7C948"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="Bold"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </materialDesign:Card>

        <Grid Visibility="{Binding IsCargando, Converter={StaticResource BooleanToVisibilityConverter}}" 
              Background="#AA000000">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                         Value="0" IsIndeterminate="True" Width="50" Height="50" Foreground="#F7C948"/>
        </Grid>

        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                Background="Transparent" BorderBrush="Transparent" Foreground="White"
                Click="BtnSalir_Click">
            <materialDesign:PackIcon Kind="Close" Width="25" Height="25"/>
        </Button>
    </Grid>
</Window>