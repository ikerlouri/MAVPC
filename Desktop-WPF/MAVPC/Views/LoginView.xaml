<Window x:Class="MAVPC.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:MAVPC.ViewModels"
        mc:Ignorable="d"
        Title="MAVPC Access" 
        WindowState="Maximized" 
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Black">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#05080D" Offset="0.0"/>
                    <GradientStop Color="#001E22" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,60,0,0">

            <Image Source="/Assets/logo.png" 
                   Width="350" Height="350" 
                   HorizontalAlignment="Center"
                   RenderOptions.BitmapScalingMode="HighQuality">
                <Image.Effect>
                    <DropShadowEffect BlurRadius="40" ShadowDepth="0" 
                                      Color="{DynamicResource PrimaryHueMidColor}" Opacity="0.5"/>
                </Image.Effect>
            </Image>

            <TextBlock Text="MAVPC CONTROL SYSTEM" 
                       FontSize="22" 
                       FontWeight="SemiBold" 
                       Foreground="#E0E0E0" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0" 
                       Opacity="0.8"
                       TextOptions.TextFormattingMode="Display"/>
        </StackPanel>

        <Border Width="400" VerticalAlignment="Center" HorizontalAlignment="Center"
                CornerRadius="12" Padding="40" Margin="0,360,0,0"
                BorderThickness="1" BorderBrush="#30FFFFFF">

            <Border.Background>
                <SolidColorBrush Color="#151922" Opacity="0.90"/>
            </Border.Background>

            <Border.Effect>
                <DropShadowEffect BlurRadius="50" ShadowDepth="15" Opacity="0.9" Color="Black"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="IDENTIFICACIÓN REQUERIDA" 
                           FontSize="13" FontWeight="Medium" 
                           Foreground="White" Opacity="0.5"
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="ID Operador"
                         materialDesign:HintAssist.Foreground="{StaticResource PrimaryHueMidBrush}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Foreground="White" CaretBrush="{StaticResource PrimaryHueMidBrush}"
                         Margin="0,0,0,25" FontSize="15"/>

                <PasswordBox materialDesign:HintAssist.Hint="Contraseña"
                             materialDesign:HintAssist.Foreground="{StaticResource PrimaryHueMidBrush}"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                             Foreground="White" CaretBrush="{StaticResource PrimaryHueMidBrush}"
                             Margin="0,0,0,45" FontSize="15"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="{StaticResource TrafficRed}"
                           Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"
                           HorizontalAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap"/>

                <Button Command="{Binding LoginCommand}"
                        Content="ACCEDER"
                        Height="50" FontSize="14" FontWeight="Bold"
                        materialDesign:ButtonAssist.CornerRadius="25"
                        Background="{StaticResource PrimaryHueMidBrush}"
                        Foreground="Black" Margin="0,0,0,20"
                        Cursor="Hand" BorderThickness="0">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="{DynamicResource PrimaryHueMidColor}" Opacity="0.4"/>
                    </Button.Effect>
                </Button>

                <Button Command="{Binding ExitCommand}"
                        Content="SALIR AL ESCRITORIO"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="#707070" FontSize="11" Opacity="0.8"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>